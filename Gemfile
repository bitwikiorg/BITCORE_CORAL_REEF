source "https://rubygems.org"

# Use GitHub Pages gem (this includes Jekyll and approved plugins with correct versions)
gem "github-pages", group: :jekyll_plugins

# Ruby 3.0+ compatibility
gem "webrick", "~> 1.7"

# Optional GitHub Pages-compatible plugins
group :jekyll_plugins do
  gem "jekyll-feed"
  gem "jekyll-seo-tag"
  gem "jekyll-sitemap"
  gem "jekyll-redirect-from"
  gem "jemoji"
end
